@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container  ">
    <div class="row  ">
        <div class="col-12 d-flex justify-content-center">
            <h1 class="text-danger">Error</h1>
        </div>
    </div>

    <div class="row  ">
        <div class="col-12 d-flex justify-content-start">
            <h3 class="text-dark">
                <strong>Details : </strong> <code class="text-danger">@ViewData["Error Messege"]</code>
            </h3>
        </div>
    </div>

    <div class="row  ">
        <div class="col-12 d-flex justify-content-start">
            <h3 class="text-dark">
                @if (Model.ShowRequestId)
                {
                    <strong>Request ID : </strong> <code class="text-danger">@Model.RequestId</code>
                }

            </h3>
        </div>
    </div>

</div>

