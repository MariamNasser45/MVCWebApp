@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">

    <div class="row">
        <div class="col-12 d-flex justify-content-center"> 
            <h1>@ViewData["Title"]</h1><br />
        </div>
    </div>

    <div class="row w-auto">
        <div class="col-12 d-flex justify-content-center">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3 mt-2 w-auto">
                        <label asp-for="Input.Username" class="form-label">User Name</label>
                        <input asp-for="Input.Username" class="form-control w-100" autocomplete="username" aria-required="true" placeholder="username@example.com" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control w-100" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex  justify-content-center">
                        <button id="login-submit" type="submit" class="w-50 btn btn-lg btn btn-outline-dark">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
